{% extends 'base.html.twig' %}

{% block title %}
    Bienvenue sur le meilleur réseau d'appartemet
{% endblock title %}

{% block header %}
    <h2>voici le header</h2>
{% endblock header %}

{% block body %}
    <div class="main">
        <div class="jumbotron" style="padding:1rem 2rem">
            <div class="container">
                <h1 class="display-2">Bienvenue à SymPNP</h1>
                <p class="lead" style="color:#343a40">SymPNP est l'agence qui met en relation voyageurs et propriétaires
                    pour le bonheur de
                    tous</p>
                <hr class="my-4">
                <p class="lead" style="color:#343a40">
                    Vous etes voyageur et vous cherchez un logement? <a class="btn btn-primary btn-lg"
                                                                        href="{{ path('ads_index') }}" role="button">C'est
                        par ici »</a>
                </p>
            </div>
        </div>
        <div class="container">
            <h2 class="h1 my-5">Nos appartements stars</h2>
            <div class="row">
                {% for data in ads %}
                    {%- include 'ad/_ad.html.twig' with {'ad':data.annonce} -%}
                {% endfor %}
            </div>
        </div>
        <div class="container">
            <h2 class="h1 my-5">Nos proprietaires stars</h2>
            <div class="row">
                {% for data in users %}
                    <div class="col">
                        <div class="card border-secondary mb-3">
                            <div class="card-body">
                                <h4 class="card-title">{{ data.user.fullName }}</h4>
                                <hr>
                                <div class="card-text">
                                    <img src="{{ data.user.picture }}" alt="Avatar de {{ data.user.fullName }}"
                                         class="float-left mr-3">
                                    <p>{{ data.user.introduction }}</p>
                                    <a href="{{ path('user_show', {'slug': data.user.slug}) }}"
                                       class="btn btn-success float-lg-right">En savoir plus</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock body %}