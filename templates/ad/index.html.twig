{% extends 'base.html.twig' %}

{% block title %}Nos Annonces!{% endblock %}

{% block body %}
    <div class="container js-filter">
        <h1 class="my-4">Les annonces de nos hotes</h1>
        <div class="row">
            <div class="col-md-3">
                {% include 'ad/_filter.html.twig' with {form : form} only %}
            </div>
            <div class="col-md-9">
                <div class="d-flex justify-content-end mb-2 js-filter-sorting">
                    {%- include 'ad/_sorting.html.twig' -%}
                </div>
                <div class="grid js-filter-content">
                    {% for ad in ads %}
                        {%- include 'ad/_ad.html.twig' -%}
                    {% endfor %}
                </div>
            </div>
        </div>
        <br>
        <div style=" display : flex; justify-content: center;" class="js-filter-pagination">
            {{ knp_pagination_render(ads) }}
        </div>
    </div>
    <style>
        .filter {
            display: block;
            position: sticky;
            top: 20px;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('js/Filer') }}
    {{ encore_entry_script_tags('js/ad_index') }}
{% endblock %}