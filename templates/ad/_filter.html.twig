{{ form_start(form, {attr: {class: 'filter js-filter-form'}}) }}

<div class="spinner-border js-loading" role="status" aria-hidden="true" style="display: none">
    <span class="sr-only">Loading...</span>
</div>


<div class="card bg-light mb-3">
    <div class="card-header text-center">
        Affiner ma recherche
    </div>
    <div class="card-body">
        {{ form_row(form.q) }}

        <h4>Prix</h4>
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.min) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.max) }}
            </div>
            <button onclick="return false;" class="btn btn-primary w-100 js-filter-button" style="margin-left: 10%; margin-right: 10%">Filtrer</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>



